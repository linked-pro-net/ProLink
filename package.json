{
  "name": "with-tailwind",
  "private": true,
  "scripts": {
    "docker:up": "docker compose up -d || true",
    "docker:down": "docker compose down",
    "dev": "pnpm docker:up && turbo run dev; pnpm docker:down",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.7.3"
  },
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=18"
  }
}
